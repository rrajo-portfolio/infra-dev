{
  "realm": "portfolio",
  "displayName": "Portfolio Platform",
  "displayNameHtml": "<div class='kc-logo-text'><span>Portfolio</span> Platform</div>",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": true,
  "registrationEmailAsUsername": false,
  "rememberMe": true,
  "verifyEmail": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "attributes": {
    "contentSecurityPolicy": "frame-src 'self'; frame-ancestors 'self' http://localhost:8087 http://localhost:18081; object-src 'none';",
    "webAuthnPolicyPasswordlessRequireResidentKey": "not specified"
  },
  "defaultRoles": [
    "default-roles-portfolio",
    "user",
    "catalog_read",
    "orders_read"
  ],
  "requiredCredentials": [
    "password"
  ],
  "otpPolicyType": "totp",
  "otpPolicyAlgorithm": "HmacSHA1",
  "otpPolicyInitialCounter": 0,
  "otpPolicyDigits": 6,
  "otpPolicyLookAheadWindow": 1,
  "otpPolicyPeriod": 30,
  "otpSupportedApplications": [
    "FreeOTP",
    "Google Authenticator"
  ],
  "passwordPolicy": "length(8) and digits(1) and upperCase(1) and specialChars(1) and notUsername(undefined)",
  "loginTheme": "portfolio-theme",
  "accountTheme": "portfolio-theme",
  "adminTheme": "keycloak",
  "emailTheme": "portfolio-theme",
  "eventsEnabled": true,
  "eventsListeners": [
    "jboss-logging"
  ],
  "enabledEventTypes": [],
  "adminEventsEnabled": true,
  "adminEventsDetailsEnabled": true,
  "roles": {
    "realm": [
      {
        "name": "admin",
        "description": "Administrator with full access"
      },
      {
        "name": "user",
        "description": "Standard authenticated user"
      },
      {
        "name": "portfolio_admin",
        "description": "Portfolio platform superuser"
      },
      {
        "name": "catalog_admin",
        "description": "Can manage products and inventory"
      },
      {
        "name": "catalog_read",
        "description": "Can view catalog products"
      },
      {
        "name": "orders_read",
        "description": "Can view orders"
      },
      {
        "name": "users_read",
        "description": "Can view public user profiles"
      },
      {
        "name": "orders_write",
        "description": "Can create and edit orders"
      },
      {
        "name": "offline_access",
        "description": "${role_offline-access}"
      },
      {
        "name": "uma_authorization",
        "description": "${role_uma_authorization}"
      },
      {
        "name": "default-roles-portfolio",
        "description": "${role_default-roles}",
        "composite": true,
        "composites": {
          "realm": [
            "uma_authorization",
            "offline_access",
            "user",
            "catalog_read",
            "orders_read"
          ],
          "client": {
            "account": [
              "manage-account",
              "view-profile"
            ]
          }
        }
      }
    ]
  },
  "scopeMappings": [
    {
      "clientScope": "email",
      "roles": ["user"]
    }
  ],
  "clients": [
    {
      "clientId": "portfolio-api",
      "name": "Portfolio Backend API",
      "description": "Service account for machine-to-machine communication",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "bearerOnly": false,
      "secret": "portfolio-api-secret",
      "serviceAccountsEnabled": true,
      "redirectUris": [],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ]
    },
    {
      "clientId": "portfolio-frontend",
      "name": "Portfolio Angular SPA",
      "description": "Frontend application with PKCE support",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "attributes": {
        "pkce.code.challenge.method": "S256",
        "oauth2.device.authorization.grant.enabled": "false",
        "use.refresh.tokens": "true"
      },
      "redirectUris": [
        "http://localhost:4200/*",
        "http://localhost:8087/*",
        "http://localhost:18081/*"
      ],
      "webOrigins": [
        "http://localhost:4200",
        "http://localhost:8087",
        "http://localhost:18081"
      ],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "roles",
        "profile",
        "email"
      ]
    }
  ],
  "users": [
    {
      "username": "portfolio-admin",
      "enabled": true,
      "email": "admin@portfolio.local",
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "Password123!",
          "temporary": false
        }
      ],
      "realmRoles": [
        "default-roles-portfolio",
        "admin",
        "portfolio_admin",
        "catalog_admin",
        "catalog_read",
        "orders_read",
        "users_read",
        "orders_write"
      ],
      "clientRoles": {
        "realm-management": ["realm-admin"]
      }
    },
    {
      "username": "portfolio-user",
      "enabled": true,
      "email": "user@portfolio.local",
      "firstName": "Portfolio",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "Password123!",
          "temporary": false
        }
      ],
      "realmRoles": [
        "default-roles-portfolio",
        "user",
        "catalog_read",
        "orders_read",
        "orders_write"
      ]
    },
    {
      "username": "service-account-portfolio-api",
      "enabled": true,
      "serviceAccountClientId": "portfolio-api",
      "realmRoles": [
        "catalog_read",
        "orders_read",
        "orders_write",
        "users_read"
      ]
    }
  ]
}
